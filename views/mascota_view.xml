<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Kanban para el modelo 'quintopet.mascota' -->
    <record id="view_kanban_mascota" model="ir.ui.view">
        <field name="name">quintopet.mascota.kanban</field>
        <field name="model">quintopet.mascota</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_example">
                <field name="id"/>
                <field name="foto"/>
                <field name="name"/>
                <field name="sexo"/>
                <field name="especie"/>
                <field name="edad"/>
                <field name="color"/>
                <field name="peso"/>
                <field name="raza"/>
                <field name="cliente_id"/>
                <field name="cita_ids"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="d-flex align-items-center">
                                <!-- Columna izquierda: Contenido -->
                                <div class="flex-grow-0 mx-3" style="padding: 5px;">
                                    <div class="o_kanban_title">
                                        <strong t-esc="record.name.value"/>
                                    </div>
                                    <div class="o_kanban_content">
                                        <p style="margin: 0;"><strong>Especie:</strong> <span t-esc="record.especie.value"/></p>
                                        <p style="margin: 0;"><strong>Sexo:</strong> <span t-esc="record.sexo.value"/></p>
                                        <p style="margin: 0;"><strong>Edad:</strong> <span t-esc="record.edad.value"/> años</p>
                                        <p style="margin: 0;"><strong>Color:</strong> <span t-esc="record.color.value"/></p>
                                        <p style="margin: 0;"><strong>Peso:</strong> <span t-esc="record.peso.value"/> kg</p>
                                        <p style="margin: 0;"><strong>Raza:</strong> <span t-esc="record.raza.value"/></p>
                                        <p style="margin: 0;"><strong>Cliente:</strong> <span t-esc="record.cliente_id.value"/></p>
                                    </div>
                                </div>
                                <!-- Columna derecha: Imagen -->
                                <div class="o_kanban_image d-flex justify-content-start align-items-center ml-5">
                                    <img t-if="record.foto.value"
                                         t-att-src="kanban_image('quintopet.mascota', 'foto', record.id.raw_value)"
                                         class="img-fluid rounded" 
                                         style="max-width: 120px; max-height: 120px;"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción para la vista -->
    <record id="act_mascota" model="ir.actions.act_window">
        <field name="name">Mascotas</field>
        <field name="res_model">quintopet.mascota</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            ¡Registra tus mascotas aquí!
            </p>
        </field>
    </record>
</odoo>
